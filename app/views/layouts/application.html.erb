<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if user_signed_in? %>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed"   data-toggle="collapse" data-target="#navbarEexample7">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <p class="navbar-brand">
            Bookers
            </p>
          </div>

          <div class="collapse navbar-collapse" id="navbarEexample7">
            <ul class="nav navbar-nav navbar-right">
              <li class="navbar-text"><%= link_to ' Home', user_path(current_user),class: 'home glyphicon glyphicon-home' %></li>

              <li class="navbar-text"> <%= link_to ' Users', users_path,class: "users glyphicon glyphicon-user"  %></li>
              <li class="navbar-text"> <%= link_to " Books", books_path,class: 'books glyphicon glyphicon-book' %></li>
              <li class="navbar-text"> <%= link_to " logout", destroy_user_session_path, method: :delete,class: 'logout glyphicon glyphicon-log-out' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    <% else %>

      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed"   data-toggle="collapse" data-target="#navbarEexample7">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <p class="navbar-brand">
            Bookers
            </p>
          </div>

          <div class="collapse navbar-collapse" id="navbarEexample7">
            <ul class="nav navbar-nav navbar-right">
              <li class="navbar-text"><%= link_to ' Home', root_path,class: 'home glyphicon glyphicon-home' %></li>

              <li class="navbar-text"> <%= link_to ' About', about_path,class: 'about glyphicon glyphicon-link'  %></li>
              <li class="navbar-text"> <%= link_to " sign up", new_user_registration_path,class: 'sign_up glyphicon glyphicon-edit' %></li>
              <li class="navbar-text"> <%= link_to " login", new_user_session_path,class: 'sign_in glyphicon glyphicon-log-in' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>
    <%= yield %>
  </body>
</html>
