<div class="container">
      <div class="row">
      	<div class="col-md-3"></div>
			<div class="col-md-6">
				<h1>Editing Book</h1>
					<%= form_for(@book) do |f| %>

						<h4>Title</h4>

						<%= f.text_field :title ,class: "book_title"%>

						<h4>Opinion</h4>

						<%= f.text_area :opinion ,class: "book_body"%>

						<%= f.submit 'Update Book',class: "btn btn-default btn-block btn-primary book_#{@book.id}"%>
						<a><%= link_to 'Show', book_path,class: "book_#{@book.id}" %></a> |
						<a><%= link_to 'Back', books_path,class: "back" %></a>
					<% end %>
			</div>
			<div class="col-md-3"></div>
		</div>
</div>