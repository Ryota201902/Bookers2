<div class="container">
      <div class="row">
        <%= render 'books/sidebar', books: @books,user:current_user,book: @book %>
         <div class="col-lg-9">
            <h1>Users</h1>
                <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>image</th><th>name</th><th></th>
                        </tr>
                      </thead>
                      <tbody>
                          <% @users.each do |user| %>
                           <tr>
                           	<td><%= attachment_image_tag user, :image, :fill, 60, 60, fallback: "no_image.jpg", size: '60x60' %></td>
                            <td><%= user.name %></td>
                            <td><%= link_to 'Show', user_path(user),class: "user_#{user.id}" %></td>
                           </tr>
                          <% end %>
                      </tbody>
                </table>
         </div>
      </div>
</div>