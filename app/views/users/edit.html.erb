<div class="container">
<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
	<h2>User info</h2>
	<%= form_for(@user) do |f| %>
	        <label>Name</label>
	        <%= f.text_field :name %>

	        <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg",size: '60x60'%>

	        <h5>Image</h5>
	   		<%= f.attachment_field :image,class:"user_image" placeholder: "プロフィール画像" %>

	   		<label>Introduction</label>
	   		<%= f.text_area :introduction,class:"introduction" %>

	    	<p><%= f.submit "Update User" %></p>
	<% end %>
</div>
